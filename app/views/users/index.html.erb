<h1 align="center">All Bloggers</h1>
<div class="center">
	<%= will_paginate @user%>
	<% @user.each do |user| %>
		<ul class="listing">
			<div class="row">
				<div class="col-md-4 well col-md-offset-4">
					<li><%= link_to image_tag(user.user_avatar.url(:medium)), user_path(user) %></li>
					<li class="article-title">
						<%= link_to user.username, user_path(user) %>
					</li>
					<li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
					<% if logged_in? && current_user.admin? %>
						<%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete the user and all their articles?"} %>
					<% end %>
				</div>
			</div>
		</ul>
	<% end %>
	<div align="center">
		<%= will_paginate @user%>
	</div>
</div>
